PROGRAM Ggt;
(* Berechnet den GGT zweier Zahlen *)
VAR z1, z2, z3, z4[4];

FUNCTION difference(VAR z1, z2[4]);
VAR v1, v2[4];
BEGIN

difference(v1, v2);

z4 := v2;

IF v1 > z1 THEN
    RETURN v1
ELSE
    RETURN z1;
END

END difference;

BEGIN
    (* Startwerte *)
    difference(z3,z4);
    z2 := 5 + z2;
    z1 := z1 + z2;
    z2 := -(18+2);
    (* eigentliche Berechnung *)
    FOR z1 := 10 TO 55 + 1 BY 1
    DO
        z1 := z1;
        z2 := z2;
    END
END Ggt.
